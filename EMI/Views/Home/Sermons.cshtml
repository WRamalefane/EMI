﻿@model IEnumerable<EMI.Models.Media>
@{
    ViewBag.Title = "Sermons";
}

<div class="jumbotron JumboImage text-center text-white ">
    <div class="container" style="padding-top:50px;padding-bottom:50px;">
        <h1 class="font-weight-bold" style="font-family:'Montserrat';font-size:50pt;">
            Sermons
        </h1>

        <h6 class="text-white font-weight-light" style="font-family:'Montserrat';font-size:16pt;">

            Empowerment Ministries International is a church led by Pastor MB Kareli and his wife Mrs Thulisiwe.<br />We aim to advance God's kingdom on earth as well as to raise up people in South Africa who will impact the continent and the world.
        </h6>
    </div>

</div>
<div class="text-center" style="padding-bottom:30px;">

    <h1 class="font-weight-bold text-secondary" style="font-family:'Montserrat';">
        Never miss any of our sermons...
    </h1>
</div>


<div class="container justify-content-center text-center">

    @if (Model.Count<EMI.Models.Media>() > 0)
    {
        foreach (var model in Model)
        {

            <iframe src="@Url.Content(model.VideoSource)" id="YoutubeUrl" class="embed-responsive-item "
                    frameborder="0"
                    allowfullscreen></iframe>





        }
    }
</div>
